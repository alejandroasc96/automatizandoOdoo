<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="automatizacion.list">
      <field name="name">automatizacion list</field>
      <field name="model">automatizacion.automatizacion</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="automatizacion.action_window">
      <field name="name">automatizacion window</field>
      <field name="res_model">automatizacion.automatizacion</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="automatizacion.action_server">
