<!-- Header de la página web -->
<template id="custom_external_layout_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-9">
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 65px;" />
            </div>
            <div class="col-xs-3" name="company_address">
                <span t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}" style="border-bottom: 1px solid black; display:inline-block;" />
            </div>
        </div>
    </div>
</template>
<!-- Cuerpo del l a factura web -->
<t name="Quotation Content" t-name="website_quote.so_quotation_content">
    <!-- Intro -->
    <div id="introduction" class="page-header mt16">
    <h1>
        <t t-if="quotation.state in ('draft','sent','cancel')">Tu Presupuesto</t>
        <t t-if="quotation.state not in ('draft','sent','cancel')">Tu Pedido</t>
        <em t-esc="quotation.name"/>
        <small t-field="quotation.state"/>
        <div t-ignore="true" class="pull-right css_editable_mode_hidden hidden-print">
            <ul class="list-inline">
                <li groups="sales_team.group_sale_salesman">
                <a t-if="quotation.state not in ('manual')" class="btn btn-info" t-att-href="'/web#return_label=Website&amp;model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (quotation._name, quotation.id, action)">Edit Quote</a>
                <a t-if="quotation.state in ('manual')" class=" btn btn-info" t-att-href="'/web#return_label=Website&amp;model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (quotation._name, quotation.id, action)">Back to Sales Order</a>
                </li>
                <li>
                    <a class="btn btn-info" target="_blank" t-att-href="'/quote/%s/%s' % (quotation.id,quotation.access_token)+'?pdf=True'">Print</a>
                </li>
                <li>
                <t t-call="portal.record_pager"/>
                </li>
            </ul>
        </div>
    </h1>
    </div>
    <!-- Informations -->
    <div class="row mt32">
        <div class="col-md-6 col-xs-6">
            <div class="row">
                <label class="col-sm-4 col-xs-4 text-right">Cliente:</label>
                <div class="col-sm-8 col-xs-8">
                    <div t-field="quotation.partner_id"/>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-4 col-xs-4 text-right">Facturar a:</label>
                <div class="col-sm-8 col-xs-8">
                    <div t-field="quotation.partner_invoice_id" t-options="{                           &quot;widget&quot;: &quot;contact&quot;,                           &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;email&quot;]                           }"/>
                </div>
            </div>
            <div t-if="quotation.partner_shipping_id.id != quotation.partner_invoice_id.id" class="row">
                <label class="col-sm-4 col-xs-4 text-right">Enviado de:</label>
                <div class="col-sm-8 col-xs-8">
                    <div t-field="quotation.partner_shipping_id" t-options="{                         &quot;widget&quot;: &quot;contact&quot;,                         &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;]                         }"/>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-6">
            <div class="row">
                <label class="col-sm-5 col-xs-5 text-right">Tu contacto:</label>
                <div class="col-sm-7 col-xs-7">
                    <div t-field="quotation.user_id" t-options="{                           &quot;widget&quot;: &quot;contact&quot;,                           &quot;fields&quot;: [&quot;name&quot;, &quot;phone&quot;, &quot;email&quot;]                           }"/>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-5 col-xs-5 text-right">Fecha Presupuesto:</label>
                <div class="col-sm-7 col-xs-7">
                    <span t-field="quotation.date_order"/>
                </div>
                <div class="clearfix"/>
                <div t-if="quotation.validity_date and quotation.state in ['draft', 'sent']">
                <label class="col-sm-5 col-xs-5 text-right">Fecha de caducidad:</label>
                <div class="col-sm-7 col-xs-7">
                    <span t-field="quotation.validity_date"/>
                </div>
                </div>
                <div class="clearfix"/>
                <div t-if="quotation.client_order_ref">
                    <label class="col-sm-5 col-xs-5 text-right">Tu Referencia:</label>
                    <div class="col-sm-7 col-xs-7">
                        <span t-field="quotation.client_order_ref"/>
                    </div>
                </div>
                <div class="clearfix"/>
                <div t-if="quotation.payment_term_id">
                    <label class="col-sm-5 col-xs-5 text-right">Términos de Pago:</label>
                    <div class="col-sm-7 col-xs-7">
                        <span t-field="quotation.payment_term_id"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Descriptions -->
    <div t-field="quotation.website_description" class="oe_no_empty"/>
    <t t-foreach="quotation.order_line" t-as="line">
        <a t-att-id="line.id"/>
        <div t-att-class="'oe_no_empty' if line.website_description else 'oe_no_empty hidden-print'" t-field="line.website_description"/>
    </t>
    <div class="oe_structure"/>
    <!-- Pricing -->
    <t t-call="website_quote.pricing"/>
    <!-- Options -->
    <t t-call="website_quote.optional_products"/>
</t>