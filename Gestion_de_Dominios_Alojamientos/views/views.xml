    <record model="ir.ui.view" id="Gestion_de_Dominios_Alojamientos.form">
      <field name="name">Gestion_de_Dominios_Alojamientos_form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='general_information']/group/group[@name='group_standard_price']">
          <field name="dead_line_service" attrs="{'invisible':[('type', '!=', 'service')]}"/>  
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="Gestion_de_Dominios_Alojamientos.list">
      <field name="name">Gestion_de_Dominios_Alojamientos_list</field>
      <field name="model">account.invoice.line</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="invoice_id"/>
          <field name="date_to_end"/>
          <field name="create_date"/>
          <field name="days_to_end"/>
          <field name="product_id"/>
        </tree>
      </field>
    </record>

    <!-- vista calendario -->
    <record model="ir.ui.view" id="Gestion_de_Dominios_Alojamientos.calendar">
      <field name="name">Gestion_de_Dominios_Alojamientos_calendar</field>
      <field name="model">account.invoice.line</field>
      <field name="arch" type="xml">
        <calendar string="date_to_end" date_start="date_to_end">
          <field name="days_to_end"/>
        </calendar>
      </field>
    </record>

    

    <record id="deadLine_service_form" model = "ir.ui.view">
      <field name="name">service_line</field>
      <field name="model">account.invoice</field>
      <field name = "inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook/page/field/tree" position="inside">
          <field name="date_to_end"/>
          <field name="create_date"/>
          <field name="days_to_end"/>
        </xpath>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="Gestion_de_Dominios_Alojamientos.action_window">
      <field name="name">Gestion_de_Dominios_Alojamientos</field> 
      <field name="res_model">account.invoice.line</field> 
      <field name="view_id" ref="Gestion_de_Dominios_Alojamientos.list"/>
      <field name="view_mode">tree,calendar</field>
    </record>

<!-- Views of schedule action -->
    <record forcecreate="True" id="revisando_factura_clientes_v1" model="ir.cron">
      <field name="name">Revision de Suscripciones Vencidas</field>
      <field eval="True" name="active" />
      <field name="user_id" ref="base.user_root" />
      <field name="interval_number">24</field>
      <field name="interval_type">hours</field>
      <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 05:00:00')" />
      <field name="numbercall">-1</field>
      <field ref="model_res_partner" name="model_id" />
        <field name="state">code</field>
      <field name="code">model.revisando_factura_clientes()</field>
      <field eval="False" name="doall"/>
      <field name="function">True</field>

    </record>


    <record forcecreate="True" id="review_quotation_v1" model="ir.cron">
      <field name="name">Revision de Presupuestos enviados</field>
      <field eval="True" name="active" />
      <field name="user_id" ref="base.user_root" />
      <field name="interval_number">24</field>
      <field name="interval_type">hours</field>
      <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 05:00:00')" />
      <field name="numbercall">-1</field>
      <field ref="model_sale_order" name="model_id" />
        <field name="state">code</field>
      <field name="code">model.review_quotation()</field>
      <field eval="False" name="doall"/>
      <field name="function">True</field>

    </record>

    <!-- Probando date to end -->
    <record forcecreate="True" id="date_to_endv1" model="ir.cron">
      <field name="name">Probando date to end</field>
      <field eval="True" name="active" />
      <field name="user_id" ref="base.user_root" />
      <field name="interval_number">24</field>
      <field name="interval_type">hours</field>
      <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 05:00:00')" />
      <field name="numbercall">-1</field>
      <field ref="model_account_invoice" name="model_id" />
        <field name="state">code</field>
      <field name="code">model.stateListener()</field>
      <field eval="False" name="doall"/>
      <field name="function">True</field>

    </record>

