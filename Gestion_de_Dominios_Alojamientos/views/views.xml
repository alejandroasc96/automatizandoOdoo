<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="Gestion_de_Dominios_Alojamientos.list">
      <field name="name">Gestion_de_Dominios_Alojamientos list</field>
      <field name="model">product.template</field>
      <field name="arch" type="xml">
        <!-- parte editable dentro de la interfaz : -->
        <tree>
        <field name="days_to_end"/>
        <field name="date_to_end"/>
          <field name="dead_line_service">
            <!-- TODO: show actual value -->
            <field name="months" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
          </field>
        </tree>
      </field>
    </record>

    <record id="deadLine_service_form" model = "ir.ui.view">
      <field name="name">Gestion_de_Dominios_Alojamientos Form</field>
      <field name="model">product.template</field>
      <field name = "inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <!-- parte editable dentro de la interfaz : -->
        <xpath expr="//page[@name = 'general_information']/group/group[@name='group_standard_price']" position="inside">
          
          <field name="dead_line_service" >
          <!-- TODO: show actual value -->
            <field name="months" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
          </field>
          <field name="days_to_end"/>
          <field name="date_to_end"/>
        </xpath>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="Gestion_de_Dominios_Alojamientos.action_window">
      <field name="name">Gestion_de_Dominios_Alojamientos</field> 
      <field name="res_model">product.template</field> 
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="Gestion_de_Dominios_Alojamientos.list"/>
    </record>


